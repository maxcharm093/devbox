{
    "packages": [
        "go@1.19.8"
    ],
    "env": {
        "GOPATH": "$HOME/go/",
        "PATH": "$PATH:$HOME/go/bin"
    },
    "shell": {
        "init_hook": [
            "export \"GOROOT=$(go env GOROOT)\""
        ],
        "scripts": {
            "install": "go get ./...",
            "build": "go build -o main.go",
            "start": "go run",
            "run_test": "go run main.go"
        }
    }
}