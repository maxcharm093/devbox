{
  "packages": {
    "ruby": "3.3",
    "bundler": "2.5",
    "nodejs": "21",
    "yarn": "1.22",
    "curl": "latest",
    "sqlite": "latest"
  },
  "shell": {
    "init_hook": [
      "gem install rails",
      "./blog/bin/bundle install",
      "./blog/bin/rails -f ./blog/Rakefile db:prepare"
    ],
    "scripts": {
      "install": [
        "gem install rails",
        "./blog/bin/bundle install",
        "./blog/bin/rails -f ./blog/Rakefile db:prepare"
      ],
      "start": ["./blog/bin/rails server"],
      "run_test": ["./blog/bin/rails test"]
    }
  }
}
