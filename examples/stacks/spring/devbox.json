{
  "packages": [
    "jdk@17",
    "gradle@latest",
    "mysql80@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!'\n",
      "echo 'Setup MySQL by running `devbox run setup_db`",
      "echo 'Run the example using `devbox run start"
    ],
    "scripts": {
      "setup_db": [
        "devbox services up mysql -b",
        "mysql -u root < setup_db.sql",
        "devbox services stop"
      ],
      "install": [
        "devbox run setup_db"
      ],
      "build": [
        "./gradlew build"
      ],
      "start":[
        "devbox services up -b",
        "./gradlew bootRun"
      ],
      "test": [
        "./gradlew test"
      ]
    }
  }
}